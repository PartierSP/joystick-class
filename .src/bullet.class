' Gambas class file

Inherits Sprite

Private howner As Boolean

Public VelocidadDisparoJuagador As Integer = -5 'disparo de jugador y va hacia arriba

Public VelocidadDisparoEnemigo As Integer = +4 'disparo de enemigo  y va hacia abajo
Public VelocidadBombaEnemigo As Integer = +2 'bomba de enemigo  y va hacia abajo

Public Sub setOwner(owner As Boolean)

  howner = owner

End

Public Function getOwner() As Boolean

  Return howner

End

Public Sub domovement()

  If howner = True Then
    Super.incrementoY(VelocidadDisparoJuagador) 'disparo avion jugador
  Else
    If Super.hpath <> "bomba.png" Then

      Super.incrementoY(VelocidadDisparoEnemigo) 'disparo aviones enemigos
    Else
      Super.incrementoY(VelocidadBombaEnemigo) 'bomba aviones enemigos se desplaza mÃ¡s lentamente
    Endif
  Endif

End

Public Sub mover()

  domovement()

  'si enemigo sale de la pantalla, se anula...
  '  If (Super.getx() + Super.deltaX) > 0 And (Super.getx() + Super.getw() + Super.deltaX) < Super.hancho Then
  If Super.gety() < 0 Or Super.gety() > Super.halto Then
    Super.off()
    Return
  Endif

  'mover disparo
  Super.setX(Super.getx() + Super.deltaX)
  Super.sety(Super.gety() + Super.deltay)
  Super.silueta = Rect(Super.getx(), Super.gety(), Super.getW(), Super.getH())

End
